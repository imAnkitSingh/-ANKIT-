<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.Award_And_Achievment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/globel"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="100dp"
                android:textSize="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:layout_below="@+id/globel"
                android:id="@+id/achievmentTitle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text=""
                android:layout_marginLeft="2dp"
                android:id="@+id/achievmentcontent"
                android:layout_below="@+id/achievmentTitle"
                android:textSize="14sp"
                android:textColor="#212121"/>





            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/awardRecyclerView"
                android:layout_below="@id/achievmentcontent"
                android:orientation="horizontal">
            </android.support.v7.widget.RecyclerView>


        </RelativeLayout>







    </ScrollView>


    <!--  android:layout_weight="0.5" -->





</LinearLayout>